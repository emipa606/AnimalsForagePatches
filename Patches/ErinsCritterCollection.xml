<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Armadillo"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Armadillo"]</xpath>
      <value>
        <comps>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>Meat_Megaspider</customThingToDig>
            <customAmountToDig>10</customAmountToDig>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Fisher"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Fisher"]/comps</xpath>
      <value>
        <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
          <customThingToDig>AEXP_RawFish</customThingToDig>
          <customAmountToDig>3</customAmountToDig>
        </li>
      </value>
    </match>
  </Operation>
</Patch>