<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Enhydriodon"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Enhydriodon"]</xpath>
      <value>
        <comps>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>AEXP_RawFish</customThingToDig>
            <customAmountToDig>3</customAmountToDig>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Palaeeudyptes"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Palaeeudyptes"]/comps</xpath>
      <value>
        <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
          <customThingToDig>AEXP_RawFish</customThingToDig>
          <customAmountToDig>3</customAmountToDig>
        </li>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Gomphotaria"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Gomphotaria"]</xpath>
      <value>
        <comps>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>AEXP_RawFish</customThingToDig>
            <customAmountToDig>3</customAmountToDig>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="ShortfacedBear"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="ShortfacedBear"]</xpath>
      <value>
        <comps>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>RawBerries</customThingToDig>
            <customAmountToDig>10</customAmountToDig>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Daeodon"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="Daeodon"]</xpath>
      <value>
        <comps>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>RawFungus</customThingToDig>
            <customAmountToDig>10</customAmountToDig>
          </li>
        </comps>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Dinocrocuta"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="BoneItem"]</xpath>
      <success>Always</success>
      <match Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Dinocrocuta"]</xpath>
        <value>
          <comps>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingToDig>BoneItem</customThingToDig>
              <customAmountToDig>5</customAmountToDig>
            </li>
          </comps>
        </value>
      </match>
    </match>
  </Operation>
</Patch>