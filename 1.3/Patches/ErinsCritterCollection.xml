        <xpath>/Defs/ThingDef[defName="Hedgehog"]/comps</xpath>
        <value>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>Meat_Megaspider</customThingToDig>
            <customAmountToDig>10</customAmountToDig>
          </li>
        </value>
      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Hedgehog"]</xpath>
        <value>
          <comps>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingToDig>Meat_Megaspider</customThingToDig>
              <customAmountToDig>10</customAmountToDig>
            </li>
          </comps>
        </value>
      </nomatch>
    </match>
  </Operation>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[defName="Fisher"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="Fisher"]/comps</xpath>
      <match Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Fisher"]/comps</xpath>
        <value>
          <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
            <customThingToDig>AEXP_RawFish</customThingToDig>
            <customAmountToDig>3</customAmountToDig>
          </li>
        </value>
      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Fisher"]</xpath>
        <value>
          <comps>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingToDig>AEXP_RawFish</customThingToDig>
              <customAmountToDig>3</customAmountToDig>
            </li>
          </comps>
        </value>
      </nomatch>
    </match>
  </Operation>
</Patch>